<button
  id="theme-toggle"
  type="button"
  class="rounded-lg p-2.5 text-sm text-text-muted hover:bg-bg-card focus:outline-none focus:ring-4 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
  aria-label="Toggle Dark Mode"
>
  <!-- Sun Icon (Hidden in Dark Mode) -->
  <svg
    id="theme-toggle-light-icon"
    class="hidden h-5 w-5"
    fill="currentColor"
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
      fill-rule="evenodd"
      clip-rule="evenodd"></path>
  </svg>
  <!-- Moon Icon (Hidden in Light Mode) -->
  <svg
    id="theme-toggle-dark-icon"
    class="hidden h-5 w-5"
    fill="currentColor"
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
  </svg>
</button>

<script>
  import { setLocalStorage, STORAGE_KEYS } from '../utils/storageUtils';

  const themeToggleBtn = document.getElementById('theme-toggle');
  const lightIcon = document.getElementById('theme-toggle-light-icon');
  const darkIcon = document.getElementById('theme-toggle-dark-icon');

  // Determine current theme state purely from DOM (which was set by BaseLayout head script)
  const isDark = document.documentElement.classList.contains('dark');

  // Initial Icon State
  if (isDark) {
    darkIcon?.classList.remove('hidden');
  } else {
    lightIcon?.classList.remove('hidden');
  }

  themeToggleBtn?.addEventListener('click', () => {
    // Toggle icons
    darkIcon?.classList.toggle('hidden');
    lightIcon?.classList.toggle('hidden');

    // Toggle class and try to save preference via consent-aware utility
    if (document.documentElement.classList.contains('dark')) {
      document.documentElement.classList.remove('dark');
      setLocalStorage(STORAGE_KEYS.THEME, 'light');
    } else {
      document.documentElement.classList.add('dark');
      setLocalStorage(STORAGE_KEYS.THEME, 'dark');
    }
  });
</script>
