---
interface Props {
  prevUrl?: string;
  nextUrl?: string;
}

const { prevUrl, nextUrl } = Astro.props;
---

<nav
  aria-label="Blog pages"
  class="mt-10 flex items-center justify-between border-t border-gray-200 pt-10 dark:border-gray-800"
>
  <!-- Previous Button -->
  <div class="flex-1">
    {
      prevUrl ? (
        <a
          href={prevUrl}
          class="group inline-flex items-center gap-2 text-sm font-bold text-text-muted transition-colors hover:text-primary"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 transition-transform group-hover:-translate-x-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            />
          </svg>
          Previous
        </a>
      ) : (
        <span class="hidden" aria-hidden="true" />
      )
    }
  </div>

  <!-- Next Button -->
  <div class="flex flex-1 justify-end">
    {
      nextUrl ? (
        <a
          href={nextUrl}
          class="group inline-flex items-center gap-2 text-sm font-bold text-text-muted transition-colors hover:text-primary"
        >
          Next
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 transition-transform group-hover:translate-x-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            />
          </svg>
        </a>
      ) : (
        <span class="hidden" aria-hidden="true" />
      )
    }
  </div>
</nav>
