---
import { SOCIAL_LINKS } from '../consts';

const today = new Date();
---

<footer
  class="mt-auto border-t border-gray-200 bg-bg-card py-12 text-text-muted dark:border-gray-800"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
      <!-- Copyright -->
      <div class="flex flex-col items-center md:items-start">
        <p class="font-mono text-sm">
          &copy; {today.getFullYear()} Hoxmot Blog.
        </p>
        <p class="mt-1 text-xs">Built with Astro & Tailwind.</p>
      </div>

      <!-- Social Links -->
      <div class="flex space-x-6">
        <!-- Twitter -->
        {
          SOCIAL_LINKS.twitter && (
            <a
              href={SOCIAL_LINKS.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="text-text-muted transition-colors hover:text-secondary"
              aria-label="Twitter"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
              </svg>
            </a>
          )
