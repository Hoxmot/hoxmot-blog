---
import { SOCIAL_LINKS } from '../consts';

const today = new Date();
---

<footer
  class="mt-auto border-t border-gray-200 bg-bg-card py-12 text-text-muted dark:border-gray-800"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
      <!-- Copyright -->
      <div class="flex flex-col items-center md:items-start">
        <p class="font-mono text-sm">
          &copy; {today.getFullYear()} Hoxmot Blog.
        </p>
        <p class="mt-1 text-xs text-text-muted">
          Built with Astro & Tailwind.
          <span class="mx-1">â€¢</span>
          <button
            id="open-cookie-preferences"
            class="transition-colors hover:text-primary hover:underline focus:outline-none"
          >
            Cookie Preferences
          </button>
        </p>
      </div>

      <!-- Social Links -->
      <div class="flex items-center space-x-6">
        <!-- Twitter -->
        {
          SOCIAL_LINKS.twitter && (
            <a
              href={SOCIAL_LINKS.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="text-text-muted transition-colors hover:text-secondary"
              aria-label="Twitter"
