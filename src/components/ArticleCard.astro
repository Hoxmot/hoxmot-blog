---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from './FormattedDate.astro';
import { cleanSlug, slugify } from '../utils/slugUtils';
import { getReadingTime } from '../utils/readTime';

interface Props {
  post: CollectionEntry<'blog'>;
  large?: boolean; // Toggle for Hero style
}

const { post, large = false } = Astro.props;
const slug = cleanSlug(post.id);
const tags = post.data.tags || [];
const readingTime = getReadingTime(post.body);
---

<article
  class:list={[
    'hover:border-secondary/50 group relative flex flex-col overflow-hidden rounded-lg border border-gray-200 bg-bg-card transition-all hover:shadow-lg dark:border-gray-700',
    large ? 'md:grid md:grid-cols-2 md:gap-8' : '',
  ]}
>
  <!-- Image (Optional) -->
  {
    post.data.heroImage && (
      <div
        class:list={[
          'overflow-hidden bg-gray-100 dark:bg-gray-800',
          large ? 'h-64 md:h-full' : 'h-48',
        ]}
      >
        <img
          src={post.data.heroImage}
          alt=""
          class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
        />
      </div>
    )
  }

  <!-- Content -->
  <div class="flex flex-1 flex-col justify-between p-6">
    <div class="space-y-4">
      <div class="flex flex-wrap items-center justify-between gap-4">
        <div class="flex items-center gap-2">
          <span
            class="bg-primary/10 inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium uppercase tracking-wide text-primary"
          >
            {post.data.category}
          </span>
          <span class="text-xs text-text-muted">â€¢ {readingTime}</span>
        </div>
        <FormattedDate date={post.data.pubDate} />
      </div>

      <div>
        <h3
          class:list={[
            'font-mono font-bold text-text-main transition-colors group-hover:text-secondary',
            large ? 'text-2xl md:text-4xl' : 'text-xl',
          ]}
        >
          <a href={`/blog/${slug}`}>
            {post.data.title}
          </a>
        </h3>
        <p
          class:list={[
            'mt-3 line-clamp-3 font-sans text-text-muted',
            large ? 'text-lg' : 'text-base',
          ]}
        >
          {post.data.description}
        </p>
      </div>

      <!-- Tags -->
      {
        tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <a
                href={`/tags/${slugify(tag)}`}
                class="font-mono text-xs text-text-muted hover:text-secondary hover:underline"
              >
                #{tag}
              </a>
            ))}
          </div>
        )
      }
    </div>

    <div class="mt-6 flex items-center gap-2 font-mono text-sm font-bold text-secondary">
      Read Article
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 transition-transform group-hover:translate-x-1"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
      </svg>
    </div>
  </div>
</article>
