---

<div class="flex items-center gap-4 border-t border-gray-200 pt-6 dark:border-gray-800">
  <span class="font-mono text-sm font-bold text-text-muted">Share:</span>
  <div class="flex gap-4">
    {
      links.map((link) => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="text-text-muted transition-colors hover:text-primary"
          aria-label={`Share on ${link.name}`}
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox={link.viewBox} set:html={link.icon} />
        </a>
      ))
    }
  </div>
</div>
