---
import '../styles/global.css';
import { generateTitle, generateImageURL } from '../utils/seoUtils';

interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  publishDate?: Date;
}

if (!Astro.site) {
  throw new Error('site is not defined in astro.config.mjs');
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
  title,
  description,
  image = '/blog-placeholder-1.jpg',
  type = 'website',
  publishDate,
} = Astro.props;

const fullTitle = generateTitle(title);
const imageURL = generateImageURL(image, Astro.site);
const siteTitle = 'Hoxmot Blog';

// RSS Auto-discovery Logic
// Check if current path is a category page to serve specific feed, else serve global
const currentPath = Astro.url.pathname;
const isCategoryPage = currentPath.startsWith('/category/');
const categorySlug = isCategoryPage ? currentPath.split('/')[2] : null;
const rssHref = categorySlug ? `/category/${categorySlug}/rss.xml` : '/rss.xml';
const rssTitle = categorySlug
  ? `${categorySlug.charAt(0).toUpperCase() + categorySlug.slice(1)} - ${siteTitle}`
  : siteTitle;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- RSS Feed Auto-Discovery -->
<link rel="alternate" type="application/rss+xml" title={rssTitle} href={rssHref} />

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL} />
<meta property="og:site_name" content={siteTitle} />
{publishDate && <meta property="article:published_time" content={publishDate.toISOString()} />}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageURL} />

<!-- Sitemap -->
<link rel="sitemap" href="/sitemap-index.xml" />
