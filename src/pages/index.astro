---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <div class="mx-auto max-w-4xl space-y-12 p-10">
    <section class="space-y-4 text-center">
      <h1 class="text-4xl font-bold md:text-6xl">
        Welcome to <span class="text-primary">Hoxmot Blog</span>
      </h1>
      <p class="text-xl text-text-muted">Software development, video games, and tech.</p>
    </section>

    <!-- Typography & Theme Check -->
    <section
      class="rounded-lg border border-gray-200 bg-bg-card p-8 shadow-sm dark:border-gray-700"
    >
      <h2 class="mb-6 border-b border-gray-200 pb-2 text-2xl dark:border-gray-700">
        Style System Status
      </h2>

      <div class="article-content space-y-4">
        <p>
          <strong>Success!</strong> You are now viewing the <code>BaseLayout</code>. The Header
          above and Footer below are persistent. This paragraph uses the <strong>Inter</strong> font (Intro
          Rule).
        </p>
        <p>
          This paragraph uses the <strong>Merriweather</strong> font (Body Rule). Try toggling the Theme
          button in the header to see the "Fire & Ice" palette adapt to Dark Mode.
        </p>
      </div>

      <div class="mt-8 flex gap-4">
        <button
          class="rounded bg-primary px-6 py-2 font-bold text-text-inverse transition-opacity hover:opacity-90"
        >
          Primary Button
        </button>
        <button
          class="hover:bg-secondary/10 rounded border-2 border-secondary px-6 py-2 font-mono font-bold text-secondary transition-colors"
        >
          secondary_btn()
        </button>
      </div>
    </section>
  </div>
</BaseLayout>
