---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const allBlogPosts = await getCollection('blog');
---

<!DOCTYPE html>
<html lang="en" class="bg-black text-white">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hoxmot blog</title>
    <meta name="description" content="A modern blog built with Astro.js." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
</head>
    <body>
    <Header />
    <main class="container mx-auto px-4 py-8 flex-grow">
        <h1 class="text-4xl sm:text-5xl md:text-6xl text-center font-extrabold text-orange-400 mb-8 font-jetbrains-mono">
            Welcome to Hoxmot blog
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {allBlogPosts.map((post) => (
                <a href={`/blog/${post.slug}`} class="bg-gray-900 rounded-lg shadow-lg overflow-hidden flex flex-col hover:shadow-orange-400/50 transition-shadow duration-300">
                    <img
			src={post.data.image?.url ?? ""}
                        alt={post.data.image?.alt ?? ""}
                        class="w-full h-48 object-cover object-center"
                        onerror="this.onerror=null;this.src='https://placehold.co/600x400/333/FF8C00?text=No+Image';"
                    />
                    <div class="p-6 flex-grow flex flex-col">
                        <h2 class="text-2xl font-bold text-orange-400 mb-2 font-jetbrains-mono">{post.data.title}</h2>
                        <p class="text-gray-400 text-sm mb-4">{post.data.publishDate?.toISOString() ?? "idk"}</p>
                        <p class="text-gray-300 flex-grow">{post.data.summary}</p>
                    </div>
                </a>
            ))}
        </div>
    </main>
    <Footer />
</BlogPost>
